
@{
  Layout = "_Layout";
}
  <h1>Artist List</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Artists have been added yet!</h3>
  }

<ul>
  @foreach(var artist in Model)
  {
    <li><a href="/allArtists/@artist.GetId()">@artist.GetName()</a></li>

  }
</ul>
<p><a href='/'>Back home</a></p>
